<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#78909c"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/game_view">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/metal_mania"
            android:textAlignment="center"
            android:text="Select Grid Size"
            android:textColor="@android:color/white"
            android:textSize="36sp"/>
    <Button
        android:id="@+id/six_square_button"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:fontFamily="@font/metal_mania"
        android:onClick="threeSquare"
        android:padding="10dp"
        android:text="3*3"
        android:textSize="25sp" />

    <Button
        android:id="@+id/four_square_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/metal_mania"
        android:onClick="fourSquare"
        android:padding="10dp"
        android:text="4*4"
        android:textSize="25sp" />

    <Button
        android:id="@+id/five_square_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:fontFamily="@font/metal_mania"
        android:onClick="fiveSquare"
        android:padding="10dp"
        android:text="5*5"
        android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/score_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/metal_mania"
            android:text="Player 1"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="36sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/metal_mania"
            android:text="Player 2"
            android:textAlignment="center"
            android:textColor="@color/pink"
            android:textSize="36sp" />

    </LinearLayout>

    <com.example.android.dotsandboxes.three_square_gameview
        android:id="@+id/six_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:visibility="gone" />

    <com.example.android.dotsandboxes.four_square_gameview
        android:id="@+id/four_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:visibility="gone" />

    <com.example.android.dotsandboxes.five_square_gameview
        android:id="@+id/five_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:visibility="gone" />
</LinearLayout>